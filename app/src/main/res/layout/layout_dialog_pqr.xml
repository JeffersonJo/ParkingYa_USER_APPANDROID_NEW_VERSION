<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="@dimen/_270sdp"
    android:layout_gravity="center"
    android:background="@drawable/gradient_background_popup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp">

            <LinearLayout
                android:layout_width="326dp"
                android:layout_height="79dp"
                android:background="@drawable/gradient_background_popup"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/iconnew" />

                <LinearLayout
                    android:layout_width="258dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombre_park_a_reservar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Notificar una sugerencia o queja"
                        android:paddingTop="@dimen/_10sdp"
                        android:textColor="#FFFF"
                        android:textColorHint="#FFFF"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <EditText
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cardView"
            android:id="@+id/pqr_text"
            android:textSize="@dimen/_10sdp"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center_horizontal"
            android:hint="Escriba su peticiÃ³n"
            android:textStyle="bold"
            android:textColorHint="#D8FFFFFF"
            android:textColor="#ffff"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/btn_pqr"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pqr_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="87dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/button_style_gradient_login"
            android:text="Enviar"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#066336"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>